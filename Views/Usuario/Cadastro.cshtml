@model Usuario
@{
    ViewData["Title"] = "Cadastro de Usuarios";
}

<h1 class="row justify-content-md-center">Cadastro de Usu√°rios</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="login">Login</label>
                <input asp-for="login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="senha">Senha</label>
                <input asp-for="senha" class="form-control" />
            </div>
        </fieldset>
        <fieldset>
            <legend>Usuario</legend>
        </fieldset>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </form>
</div>